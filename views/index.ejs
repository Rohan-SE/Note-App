<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Note App</title>
</head>
<body>
    <% if(error.length>0) { %>
        <div class="absolute text-white bg-red-700 p-4 left-1/3 text-2xl w-96 text-center">
            <%= error %>
        </div>
    <% } %>
    <div id="main-page" class="h-screen w-full bg-zinc-900 text-white flex gap-4 justify-around items-center">
        <div id="left-side flex flex-col">
            <h1 class="text-2xl mb-4">Create Note</h1>
            <form action="/create" method="post" class="flex flex-col justify-center items-center">
                <textarea class="resize-none w-96 h-24 bg-transparent border-2 border-zinc-300 rounded-md p-3 mb-2" name="content" id=""></textarea>
                <input type="submit" value="Create Note" class="cursor-pointer px-3 py-2 bg-zinc-950 border-zinc-300 border-2 rounded-md w-44">
            </form>
        </div>
        
        <div id="right-side" class="flex px-5 items-center">
            <div class="w-4 h-64 border-r-2 border-white mr-10"></div>
            <div class="w-96 h-96">
            <h1 class="pl-10 text-2xl mb-6">Notes : </h1>
             <div class="pl-10 w-96 h-80 overflow-y-scroll">
                <% allNotes.forEach(function(note){ %>
                    <div class="flex border-2 justify-between border-zinc-300 bg-transparent rounded-md mb-4 p-4 gap-6 items-center">
                        <h1 class="text-lg tracking-tight mr-4"><%= note.content %></h1>
                        <div class="flex ml-2 gap-2">
                            <a href="/update/<%= note._id %>" class="text-sm px-2 py-1 bg-zinc-950 border-zinc-300 border-2 rounded-md w-16 text-center text-yellow-400">Edit</a>
                        <a href="/delete/<%= note._id %>" class="text-sm px-2 py-1 bg-zinc-950 border-zinc-300 border-2 rounded-md w-16 text-center text-red-500">Delete</a>
                        </div>
                    </div>
                    <% }) %>
             </div>
            </div>
            </div>
    </div>
</body>
</html>